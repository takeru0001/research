# Taxi Mobility Simulator Configuration
# Copy this file to .env and modify as needed

# Simulation Parameters
TAXI_SIM_NUMBER_OF_CARS=100
TAXI_SIM_EPSILON=0.1
TAXI_SIM_MAX_STEPS=150000
TAXI_SIM_NUM_OF_DIVISION=10
TAXI_SIM_SENSITIVITY=1.0

# File Paths
TAXI_SIM_NETWORK_FILE=data/maps/EntireSanFrancisco.net.xml
TAXI_SIM_GEOJSON_FILE=data/maps/EntireSanFrancisco.geojson
TAXI_SIM_TAXI_DATA_DIR=data/raw/cabspottingdata
TAXI_SIM_TAXI_LIST_FILE=data/raw/cabspottingdata/_cabs.txt

# Output Settings
TAXI_SIM_OUTPUT_DIR=output/simulation
TAXI_SIM_LOG_LEVEL=INFO
TAXI_SIM_SAVE_ANIMATION=true

# Animation Settings
TAXI_SIM_ANIMATION_INTERVAL=50

# Map Settings
TAXI_SIM_MAP_ZOOM_LEVEL=17
TAXI_SIM_TILE_SERVER=https://tile.openstreetmap.org/{z}/{x}/{y}.png
